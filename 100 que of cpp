// 8.Print the sum of two user-entered numbers.
#include <iostream>
using namespace std ;
int main (){
    
    int num1 , num2, sum;
   
    cout <<"enter a num1";
    cin>> num1;
    
    cout <<"enter num 2";
    cin>> num2 ;
    
    sum = num1 + num2;
    
    cout << "the sum of" << num1 << "and"<< num2 << "is:" << sum << std::endl;
    
}

