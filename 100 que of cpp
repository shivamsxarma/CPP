// 20.Print the sum of three numbers entered by the user.
#include <iostream>
using namespace std ;
int main (){
    
    int num1 , num2,num3, sum;
   
    cout <<"enter a num1";
    cin>> num1;
    
    cout <<"enter num 2";
    cin>> num2 ;
    
      cout <<"enter num 3";
    cin>> num3 ;
    
    sum = num1 + num2 +num3;
    
    cout << "the sum of" << num1 << "and"<< num2 << num3<<"is:" << sum << std::endl;
}


// 22.Print the product of two numbers using variables (e.g., a = 6, b = 9).
#include <iostream>
using namespace std ;
int main (){
    
    int a,b;
    a=2;
    b=2;
    cout<<a*b;
    

}


// 23.Print "My favorite number is __" where the number is user-input.
#include <iostream>
using namespace std ;
int main (){
  int favorite_number;

   
    cout << "Please enter your favorite number: ";
    cin >> favorite_number;

  
    cout << "My favorite number is " << favorite_number << endl;
    

}

